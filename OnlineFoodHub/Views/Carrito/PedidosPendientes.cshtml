@model List<OnlineFoodHub.Models.Pedido>

<section class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="text-primary"><i class="fa-solid fa-clock"></i> Pedidos Pendientes</h1>
        <p class="fs-5 text-muted">Revisa los pedidos que aún no has completado:</p>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm p-4">
            <p class="fs-5">No tienes pedidos pendientes en este momento.</p>
            <a href="/Home" class="btn btn-primary mt-3">
                <i class="fa-solid fa-arrow-left"></i> Seguir Comprando
            </a>
        </div>
    }
    else
    {
        <div class="card shadow-lg">
            <div class="card-header bg-warning text-dark text-center">
                <h3 class="m-0"><i class="fa-solid fa-list-check"></i> Lista de Pedidos Pendientes</h3>
            </div>
            <div class="card-body">
                <table class="table table-striped table-hover table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th># Pedido</th>
                            <th>Fecha</th>
                            <th>Total</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pedido in Model)
                        {
                            <tr>
                                <td>@pedido.PedidoId</td>
                                <td>@pedido.Fecha.ToString("g")</td>
                                <td>@pedido.Total.ToString("C")</td>
                                <td>
                                    <a asp-action="ConfirmacionPedido" asp-route-id="@pedido.PedidoId" class="btn btn-success btn-sm">
                                        <i class="fa-solid fa-cart-arrow-down"></i> Continuar Compra
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</section>
