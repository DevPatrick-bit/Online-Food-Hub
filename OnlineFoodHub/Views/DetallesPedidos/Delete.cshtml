@model OnlineFoodHub.Models.Detalle_Pedido

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h1 class="mb-4 text-danger"><i class="fas fa-trash-alt"></i> @ViewData["Title"]</h1>

    <h3 class="mb-4">Are you sure you want to delete this?</h3>

    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Detalle Pedido</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 text-danger">
                    @Html.DisplayNameFor(model => model.Pedido)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Pedido.Estado)
                </dd>

                <dt class="col-sm-3 text-danger">
                    @Html.DisplayNameFor(model => model.Producto)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Producto.Codigo)
                </dd>

                <dt class="col-sm-3 text-danger">
                    @Html.DisplayNameFor(model => model.Cantidad)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Cantidad)
                </dd>

                <dt class="col-sm-3 text-danger">
                    @Html.DisplayNameFor(model => model.Precio)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Precio)
                </dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <form asp-action="Delete" class="d-inline">
                <input type="hidden" asp-for="DetallePedidoId" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

