@model OnlineFoodHub.Models.Detalle_Pedido

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <h1 class="mb-4 text-primary">@ViewData["Title"]</h1>

    <div class="card">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">Detalle Pedido</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 text-primary">
                    @Html.DisplayNameFor(model => model.Pedido)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Pedido.Estado)
                </dd>

                <dt class="col-sm-3 text-primary">
                    @Html.DisplayNameFor(model => model.Producto)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Producto.Codigo)
                </dd>

                <dt class="col-sm-3 text-primary">
                    @Html.DisplayNameFor(model => model.Cantidad)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Cantidad)
                </dd>

                <dt class="col-sm-3 text-primary">
                    @Html.DisplayNameFor(model => model.Precio)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Precio)
                </dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model?.DetallePedidoId" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>


