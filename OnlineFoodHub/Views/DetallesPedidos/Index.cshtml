@model IEnumerable<OnlineFoodHub.Models.Detalle_Pedido>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New
        </a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Pedido)</th>
                <th>@Html.DisplayNameFor(model => model.Producto)</th>
                <th>@Html.DisplayNameFor(model => model.Cantidad)</th>
                <th>@Html.DisplayNameFor(model => model.Precio)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <span class="badge
                            @(item.Pedido.Estado == "Cancelado" ? "bg-danger" :
                              item.Pedido.Estado == "Pendiente" ? "bg-warning" :
                              "bg-secondary")">
                            @Html.DisplayFor(modelItem => item.Pedido.Estado)
                        </span>
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Producto.Codigo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cantidad)</td>
                    <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.DetallePedidoId" class="btn btn-warning btn-sm me-2">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.DetallePedidoId" class="btn btn-info btn-sm me-2">
                            <i class="fas fa-info-circle"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.DetallePedidoId" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


