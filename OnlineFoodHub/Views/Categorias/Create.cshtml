@model OnlineFoodHub.Models.Categoria

@{
    ViewData["Title"] = "Crear Categoría";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="text-primary"><i class="fas fa-plus-circle"></i> Crear Categoría</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver a la Lista
        </a>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-center text-secondary">Nueva Categoría</h4>
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group">
                            <label asp-for="Nombre" class="form-label"><i class="fas fa-tag"></i> Nombre</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre de la categoría" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Descripcion" class="form-label"><i class="fas fa-info-circle"></i> Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Ingrese una breve descripción"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ImagenCategoria" class="form-label"><i class="fas fa-image"></i> URL de la Imagen</label>
                            <input asp-for="ImagenCategoria" class="form-control" placeholder="Ingrese la URL de la imagen" />
                            <span asp-validation-for="ImagenCategoria" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="fas fa-save"></i> Crear
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}