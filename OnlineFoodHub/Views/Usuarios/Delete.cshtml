@model OnlineFoodHub.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container mt-5">
    <h1 class="mb-4 text-danger">
        <i class="fas fa-user-times"></i> Eliminar Usuario
    </h1>

    <div class="alert alert-warning">
        <strong>¿Estás seguro de que deseas eliminar este usuario?</strong>
    </div>

    <div class="card shadow-sm p-4">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Nombre:</dt>
            <dd class="col-sm-9">@Model.Nombres</dd>

            <dt class="col-sm-3 fw-bold">Teléfono:</dt>
            <dd class="col-sm-9">@Model.Telefono</dd>

            <dt class="col-sm-3 fw-bold">Nombre de Usuario:</dt>
            <dd class="col-sm-9">@Model.NombreUsuario</dd>

            <dt class="col-sm-3 fw-bold">Rol:</dt>
            <dd class="col-sm-9">@Model.Rol.Nombre</dd>
        </dl>
    </div>

    <div class="mt-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="UsuarioId" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Eliminar
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </form>
    </div>
</div>
