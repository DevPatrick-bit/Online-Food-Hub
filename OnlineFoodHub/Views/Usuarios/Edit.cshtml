@model OnlineFoodHub.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-5">
    <h1 class="mb-4 text-warning">
        <i class="fas fa-user-edit"></i> Editar Usuario
    </h1>

    <div class="card shadow-sm p-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="UsuarioId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Nombres" class="form-label fw-bold"></label>
                <input asp-for="Nombres" class="form-control" />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Telefono" class="form-label fw-bold"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NombreUsuario" class="form-label fw-bold"></label>
                <input asp-for="NombreUsuario" class="form-control" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Correo" class="form-label fw-bold"></label>
                <input asp-for="Correo" class="form-control" type="email" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

           

            <div class="mb-3">
                <label asp-for="RolID" class="form-label fw-bold"></label>
                <select asp-for="RolID" class="form-control" asp-items="ViewBag.RolID"></select>
                <span asp-validation-for="RolID" class="text-danger"></span>
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-warning">
                    <i class="fas fa-save"></i> Guardar Cambios
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
            </div>
        </form>
    </div>
</div>

