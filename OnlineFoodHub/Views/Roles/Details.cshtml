@model OnlineFoodHub.Models.Rol

@{
    ViewData["Title"] = "Detalles del Rol";
}

<div class="container mt-5">
    <h1 class="mb-4 text-info">
        <i class="fas fa-info-circle"></i> Detalles del Rol
    </h1>

    <div class="card shadow-sm p-4">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Nombre del Rol:</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>
        </dl>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.RolId" class="btn btn-primary">
            <i class="fas fa-edit"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver
        </a>
    </div>
</div>
