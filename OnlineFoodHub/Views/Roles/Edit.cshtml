@model OnlineFoodHub.Models.Rol

@{
    ViewData["Title"] = "Editar Rol";
}

<div class="container mt-5">
    <h1 class="mb-4 text-warning">
        <i class="fas fa-edit"></i> Editar Rol
    </h1>

    <div class="card shadow-sm p-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="RolId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label fw-bold">Nombre del Rol</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-warning">
                    <i class="fas fa-save"></i> Guardar Cambios
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
            </div>
        </form>
    </div>
</div>
