@model IEnumerable<OnlineFoodHub.Models.Rol>

@{
    ViewData["Title"] = "Lista de Roles";
}

<div class="container mt-5">
    <h1 class="mb-4 text-primary">
        <i class="fas fa-tags"></i> Lista de Roles
    </h1>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Crear Nuevo Rol
        </a>
    </div>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-primary text-center">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.RolId" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.RolId" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.RolId" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
