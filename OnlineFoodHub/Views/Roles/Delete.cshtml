@model OnlineFoodHub.Models.Rol

@{
    ViewData["Title"] = "Eliminar Rol";
}

<div class="container mt-5">
    <h1 class="mb-4 text-danger">
        <i class="fas fa-trash-alt"></i> Eliminar Rol
    </h1>

    <div class="alert alert-warning">
        <strong>¿Estás seguro de que deseas eliminar este rol?</strong>
    </div>

    <div class="card shadow-sm p-4">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Nombre del Rol:</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>
        </dl>
    </div>

    <div class="mt-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="RolId" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Eliminar
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </form>
    </div>
</div>
