@model OnlineFoodHub.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container mt-5">
    <h1 class="text-danger mb-4">
        <i class="fas fa-trash-alt"></i> Eliminar Producto
    </h1>

    <div class="alert alert-warning" role="alert">
        <h5 class="mb-0"><i class="fas fa-exclamation-triangle"></i> ¿Estás seguro de que deseas eliminar este producto?</h5>
        <p>Esta acción no se puede deshacer.</p>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Detalles del Producto</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Código</dt>
                <dd class="col-sm-9">@Model.Codigo</dd>

                <dt class="col-sm-3 fw-bold">Nombre</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>

                <dt class="col-sm-3 fw-bold">Tipo</dt>
                <dd class="col-sm-9">@Model.Tipo</dd>

                <dt class="col-sm-3 fw-bold">Descripción</dt>
                <dd class="col-sm-9">@Model.Descripcion</dd>

                <dt class="col-sm-3 fw-bold">Precio</dt>
                <dd class="col-sm-9">@String.Format("{0:C}", Model.Precio)</dd>

                <dt class="col-sm-3 fw-bold">Imagen</dt>
                <dd class="col-sm-9">
                    <img src="@Model.Imagen" alt="@Model.Nombre" class="img-thumbnail" style="max-width: 150px;" />
                </dd>

                <dt class="col-sm-3 fw-bold">Categoría</dt>
                <dd class="col-sm-9">@Model.Categoria?.Descripcion</dd>

                <dt class="col-sm-3 fw-bold">Stock</dt>
                <dd class="col-sm-9">@Model.Stock</dd>

                <dt class="col-sm-3 fw-bold">Marca</dt>
                <dd class="col-sm-9">@Model.Marca</dd>

                <dt class="col-sm-3 fw-bold">Estado</dt>
                <dd class="col-sm-9">
                    @if (Model.Activo)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactivo</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="text-end">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="ProductoId" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Eliminar
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver a la Lista
        </a>
    </div>
</div>
