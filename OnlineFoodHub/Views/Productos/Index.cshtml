@model IEnumerable<OnlineFoodHub.Models.Producto>

@{
    ViewData["Title"] = "Lista de Productos";
}

<div class="container mt-5">
    <h1 class="mb-4 text-primary">
        <i class="fas fa-box"></i> Lista de Productos
    </h1>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Crear Nuevo Producto
        </a>
    </div>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-primary text-center">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Codigo)</th>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                <th>@Html.DisplayNameFor(model => model.Precio)</th>
                <th>@Html.DisplayNameFor(model => model.Imagen)</th>
                <th>@Html.DisplayNameFor(model => model.Categoria)</th>
                <th>@Html.DisplayNameFor(model => model.Stock)</th>
                <th>@Html.DisplayNameFor(model => model.Marca)</th>
                <th>@Html.DisplayNameFor(model => model.Activo)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Codigo</td>
                    <td>@item.Nombre</td>
                    <td>@item.Tipo</td>
                    <td>@item.Descripcion</td>
                    <td>@String.Format("{0:C}", item.Precio)</td>
                    <td>
                        <img src="@item.Imagen" alt="Imagen de @item.Nombre" class="img-thumbnail" style="max-width: 100px;" />
                    </td>
                    <td>@item.Categoria?.Descripcion</td>
                    <td>@item.Stock</td>
                    <td>@item.Marca</td>
                    <td>
                        @if (item.Activo)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactivo</span>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.ProductoId" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.ProductoId" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.ProductoId" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
